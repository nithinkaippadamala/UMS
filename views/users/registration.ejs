<script type="text/JavaScript">
                function validation(){
                var user = document.getElementById('user').value;
                var emails = document.getElementById('emails').value;
                var mobileNumber = document.getElementById('mobileNumber').value;
                var pass = document.getElementById('pass').value;
                
    
                if (user == "") {
                    document.getElementById('username').innerHTML =" ** Plese fill the username field";
                    return false;
                }
                if ((user.length <= 2 || user.length > 20)) {
                  document.getElementById('username').innerHTML = "  ** user length must be between 2 and 20";
                  return false;
                }
                
                if (!isNaN(user)){
                  document.getElementById('username').innerHTML ="  ** only characters are allowed";
                  return false;
                }
                if (emails == "") {
                    document.getElementById('emailids').innerHTML =" ** Plese fill the email ids field";
                    return false;
                }
                if(emails.indexOf('@') <= 0 ){
                    document.getElementById('emailids').innerHTML =" ** @ Invalid Postion";
                    return false;
                }
                
                if((emails.charAt(emails.length-4)!='.')  && (emails.charAt(emails.length-3)!='.')){
                    document.getElementById('emailids').innerHTML =" ** . Invalid Postion";
                    return false;
                }
                if (mobileNumber == "") {
                    document.getElementById('mobileno').innerHTML =" ** Plese fill the mobile Number field";
                    return false;
                }
                if(isNaN(mobileNumber)){
                    document.getElementById('mobileno').innerHTML =" ** user must write digits only not character ";
                    return false;
                }
                if(mobileNumber.length!=10){
                    document.getElementById('mobileno').innerHTML =" ** mobile Number must be 10 digits only ";
                    return false;
                }
                if (pass == "") {
                  document.getElementById('passwords').innerHTML =" ** Plese fill the password field";
                  return false;
                }
                if((pass.length <= 5) || (pass.length > 20)){
                  document.getElementById('passwords').innerHTML ="  ** password length must be between 5 and 20";
                    return false;
                }
}
</script>


