<section class="vh-100" style="background-color: #729a61;">
  <div class="container py-3 h-70">
    <div class="row d-flex justify-content-center align-items-center h-70">
      <div class="col col-xl-9">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 520px; " />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form  action="" method="post" enctype="multipart/form-data"  >

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #19ff90;"></i>
                    <span class="h1 fw-bold mb-0">User Registration Form</span>
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example17">username</label>
                      <input type="text" name="user" id="user" class="form-control form-control-lg" required />
                      <span id="username" class="text-danger font-weight-bold"> </span>
                </div>
                  

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example17">Email address</label>
                    <input type="text" name="email" id="emails" class="form-control form-control-lg" required />
                    <span id="emailids" class="text-danger font-weight-bold"> </span>
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example27">mobileNumber</label>
                    <input type="text" name="mobile" id="mobileNumber" class="form-control form-control-lg" required />
                    <span id="mobileno" class="text-danger font-weight-bold"> </span>
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example27">image</label>
                    <input type="file" id="form2Example27" name="image" class="form-control form-control-lg" required />
                  </div>

                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example27">password</label>
                    <input type="text"  name="pass" id="pass"  class="form-control form-control-lg" required />
                    <span id="passwords" class="text-danger font-weight-bold"> </span>
                  </div>
                  
                   <input type="submit" name="submit" value="Register" class="btn-success" onclick="return validation()" >
                  
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


